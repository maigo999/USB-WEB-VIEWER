@import url(https://fonts.googleapis.com/earlyaccess/notosansjp.css);
main
    font-family: 'Noto Sans JP';
header
    height 50px
    background: #2196F3
    display flex
    align-items: center
    h1
        margin-left: 20px
        color: white
        &:hover
            color: #CCC
    a
        text-decoration: none


footer 
    height 30px
    width: 100%
    background: #2196F3
    color: white
    position: fixed;
    bottom: 0;
    display: flex
    justify-content center
    align-items: center
.about
    width: 960px
    margin: 100px auto 0 auto
    text-align: center
    h2
        margin-bottom: 20px
        font-size: 18pt
    p
        font-size: 12pt
    @media screen and (max-width: 960px)
        width: 80%
.content
    width: 960px
    margin: auto
    margin-bottom: 100px
    .form
        display: flex
        justify-content: center
        #login-button
            margin: 50px auto 20px auto
            width: 400px
            height 120px
            font-size: 20pt
            transition: background-color 0.5s;
            cursor pointer
            &:hover
                color: white
                background: #2196F3
 
            @media screen and (max-width: 480px)   
                width: 95%

    @media screen and (max-width: 960px)
        width: 100%
            

.return-box
    width: 600px
    height 100px
    margin: 0 auto 20px auto
    h2
        font-size: 18pt
        margin-top: 10px
        margin-bottom: 15px
    p
        font-size: 20pt
    @media screen and (max-width: 660px)
        width: 500px
        h2
            font-size: 16pt
        p
            font-size: 18pt
    @media screen and (max-width: 480px)
        width: 95%
.fream
    background-color: white
    border: 2px solid #2196F3
    text-align: center